coté serveur

cvlc "/home/administrateur/Documents/RnBoi - MON BÉBÉ (Visualizer).mp4" \
  --sout "#standard{access=http,mux=ts,dst=0.0.0.0:8080}" \
  --loop \
  --no-metadata-network-access


